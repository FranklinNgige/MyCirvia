generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(uuid())
  email           String          @unique
  createdAt       DateTime        @default(now())
  cirviasCreated  Cirvia[]        @relation("CirviaCreatedBy")
  cirviaMembers   CirviaMember[]
  cirviaInvites   CirviaInvite[]  @relation("CirviaInviteCreatedBy")
  identityScopes  IdentityScope[]
  posts           Post[]
  comments        Comment[]
  postLikes       PostLike[]
  commentLikes    CommentLike[]
}

model Cirvia {
  id              String            @id @default(uuid())
  name            String            @unique
  description     String
  visibility      String
  requireApproval Boolean           @default(true)
  maxMembers      Int?
  createdById     String
  createdBy       User              @relation("CirviaCreatedBy", fields: [createdById], references: [id])
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  deletedAt       DateTime?
  members         CirviaMember[]
  invites         CirviaInvite[]
  chat            CirviaChat?
  identityScopes  IdentityScope[]
  posts           Post[]
}

model CirviaMember {
  id          String             @id @default(uuid())
  cirviaId    String
  userId      String
  role        String
  status      String
  mutedUntil  DateTime?
  joinedAt    DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  cirvia      Cirvia             @relation(fields: [cirviaId], references: [id])
  user        User               @relation(fields: [userId], references: [id])

  @@index([cirviaId])
  @@index([userId])
  @@unique([cirviaId, userId])
}

model CirviaInvite {
  id          String   @id @default(uuid())
  cirviaId    String
  inviteCode  String   @unique
  createdById String
  expiresAt   DateTime
  maxUses     Int?
  usesCount   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  cirvia      Cirvia   @relation(fields: [cirviaId], references: [id])
  createdBy   User     @relation("CirviaInviteCreatedBy", fields: [createdById], references: [id])

  @@index([cirviaId])
  @@index([inviteCode])
}

model CirviaChat {
  id        String   @id @default(uuid())
  cirviaId  String   @unique
  createdAt DateTime @default(now())
  cirvia    Cirvia   @relation(fields: [cirviaId], references: [id])
}

model IdentityScope {
  id        String   @id @default(uuid())
  userId    String
  cirviaId  String?
  scope     String
  identityLevel   String  @default("ANONYMOUS")
  showAgeRange    Boolean @default(false)
  showGender      Boolean @default(false)
  showCity        Boolean @default(false)
  showState       Boolean @default(false)
  showBio         Boolean @default(false)
  showProfilePhoto Boolean @default(false)
  customAvatarKey String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  cirvia    Cirvia?  @relation(fields: [cirviaId], references: [id])

  @@index([userId])
  @@index([cirviaId])
  @@unique([userId, cirviaId, scope])
}

model Post {
  id          String         @id @default(uuid())
  cirviaId    String
  authorId    String
  contentText String
  mediaKeys   String?
  visibility  String         @default("MEMBERS_ONLY")
  isPinned    Boolean        @default(false)
  isDeleted   Boolean        @default(false)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  deletedAt   DateTime?
  cirvia      Cirvia         @relation(fields: [cirviaId], references: [id])
  author      User           @relation(fields: [authorId], references: [id])
  comments    Comment[]
  likes       PostLike[]

  @@index([cirviaId])
  @@index([authorId])
  @@index([createdAt])
}

model Comment {
  id              String        @id @default(uuid())
  postId          String
  authorId        String
  contentText     String
  parentCommentId String?
  isDeleted       Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  deletedAt       DateTime?
  post            Post          @relation(fields: [postId], references: [id])
  author          User          @relation(fields: [authorId], references: [id])
  parentComment   Comment?      @relation("CommentReplies", fields: [parentCommentId], references: [id])
  replies         Comment[]     @relation("CommentReplies")
  likes           CommentLike[]

  @@index([postId])
  @@index([authorId])
  @@index([createdAt])
}

model PostLike {
  id        String   @id @default(uuid())
  postId    String
  userId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([postId])
  @@index([userId])
  @@unique([postId, userId])
}

model CommentLike {
  id        String   @id @default(uuid())
  commentId String
  userId    String
  createdAt DateTime @default(now())
  comment   Comment  @relation(fields: [commentId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([commentId])
  @@index([userId])
  @@unique([commentId, userId])
}
