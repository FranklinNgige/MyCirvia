generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum CirviaVisibility {
  PUBLIC
  PRIVATE
}

enum CirviaMemberRole {
  OWNER
  ADMIN
  MODERATOR
  MEMBER
}

enum CirviaMemberStatus {
  PENDING
  ACTIVE
  BANNED
  MUTED
  REMOVED
}

model User {
  id              String          @id @default(uuid())
  email           String          @unique
  createdAt       DateTime        @default(now())
  cirviasCreated  Cirvia[]        @relation("CirviaCreatedBy")
  cirviaMembers   CirviaMember[]
  cirviaInvites   CirviaInvite[]  @relation("CirviaInviteCreatedBy")
  identityScopes  IdentityScope[]
}

model Cirvia {
  id              String            @id @default(uuid())
  name            String            @unique
  description     String
  visibility      CirviaVisibility
  requireApproval Boolean           @default(true)
  maxMembers      Int?
  createdById     String
  createdBy       User              @relation("CirviaCreatedBy", fields: [createdById], references: [id])
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  deletedAt       DateTime?
  members         CirviaMember[]
  invites         CirviaInvite[]
  chat            CirviaChat?
  identityScopes  IdentityScope[]
}

model CirviaMember {
  id          String             @id @default(uuid())
  cirviaId    String
  userId      String
  role        CirviaMemberRole
  status      CirviaMemberStatus
  mutedUntil  DateTime?
  joinedAt    DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  cirvia      Cirvia             @relation(fields: [cirviaId], references: [id])
  user        User               @relation(fields: [userId], references: [id])

  @@index([cirviaId])
  @@index([userId])
  @@unique([cirviaId, userId])
}

model CirviaInvite {
  id          String   @id @default(uuid())
  cirviaId    String
  inviteCode  String   @unique
  createdById String
  expiresAt   DateTime
  maxUses     Int?
  usesCount   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  cirvia      Cirvia   @relation(fields: [cirviaId], references: [id])
  createdBy   User     @relation("CirviaInviteCreatedBy", fields: [createdById], references: [id])

  @@index([cirviaId])
  @@index([inviteCode])
}

model CirviaChat {
  id        String   @id @default(uuid())
  cirviaId  String   @unique
  createdAt DateTime @default(now())
  cirvia    Cirvia   @relation(fields: [cirviaId], references: [id])
}

model IdentityScope {
  id        String   @id @default(uuid())
  userId    String
  cirviaId  String?
  scope     String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  cirvia    Cirvia?  @relation(fields: [cirviaId], references: [id])

  @@index([userId])
  @@index([cirviaId])
  @@unique([userId, cirviaId, scope])
}
